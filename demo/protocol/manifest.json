{
  "manifest_version": 2,
  "version": "0.1",
  "name": "protocol@libdweb",
  "description": "Extension containing libdweb protocol API",
  "permissions": [],
  "applications": {
    "gecko": {
      "id": "@libdweb-protocol-demo"
    }
  },

  "experiment_apis": {
    "protocol": {
      "schema": "modules/libdweb/src/protocol/protocol.json",
      "child": {
        "scopes": ["addon_child"],
        "paths": [["protocol"]],
        "script": "modules/libdweb/src/protocol/client.js"
      },
      "parent": {
        "events": ["startup"],
        "scopes": ["addon_parent"],
        "paths": [["protocol"]],
        "script": "modules/libdweb/src/protocol/host.js"
      }
    }
  },
  "protocol_handlers": [
    {
      "protocol": "ext+dweb",
      "name": "dweb protocol",
      "uriTemplate": "/api.html#!/%s"
    }
  ],
  "background": {
    "scripts": ["protocol.js"]
  },
  "icons": {
    "48": "../discovery/logo-flyweb-grey.svg",
    "96": "../discovery/logo-flyweb-grey.svg"
  }
}
