{
  "manifest_version": 2,
  "version": "2.0",
  "name": "Extension containing an experimental libdweb APIs",
  "experiment_apis": {
    "protocol": {
      "schema": "./schemas/protocol.json",
      "child": {
        "scopes": ["addon_child"],
        "paths": [["protocol"]],
        "script": "./src/protocol/child.js"
      },
      "parent": {
        "events": ["startup"],
        "scopes": ["addon_parent"],
        "paths": [["protocol"]],
        "script": "./src/protocol/parent.js"
      }
    },
    "FileSystem": {
      "schema": "./schemas/FileSystem.json",
      "child": {
        "scopes": ["addon_child"],
        "paths": [["FileSystem"]],
        "script": "./src/FileSystem/child.js"
      },
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["FileSystem"]],
        "script": "./src/FileSystem/parent.js"
      }
    }
  },
  "background": { "scripts": ["demo/background.js"] },
  "protocol": {
    "goz": "demo/goz.js"
  }
}
